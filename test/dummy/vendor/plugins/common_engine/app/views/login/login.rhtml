<%- form_tag do -%>
	<p><label for="username">Username:</label> <em>(your email)</em><br />
	<%= text_field 'auth', 'username', {"size"=>"24", "tabindex"=>"1"} %></p>
	
	<p><label for="password">Password:</label><br />
	<%= password_field 'auth', 'plain_password', {"size"=>"24", "tabindex"=>"2"} %>	
	<%= submit_tag "Login" %></p>
	
	<p><%= link_to "Forgot your password?", :action => "forgot_password" %></p>
	<p><% link_to "Create Account", :action => "add_user" %></p>
<%- end -%>
